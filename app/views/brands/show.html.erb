<%= turbo_frame_tag dom_id(@brand) do %>
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0"><%= @brand.name %></h1>
          </div>

          <div class="mt-4">
            <h5 class="text-primary">Description</h5>
            <p class="mb-0"><%= @brand.description %></p>
          </div>

          <div class="mt-4">
            <%= link_to edit_brand_path(@brand),
                        class: 'btn btn-primary me-2',
                        data: { turbo_frame: "brand_form" } do %>
              <i class="fas fa-edit me-1"></i>Edit
            <% end %>
            <%= link_to brands_path, class: 'btn btn-light' do %>
              <i class="fas fa-arrow-left me-1"></i>Back
            <% end %>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title mb-4">
            <i class="fas fa-shoe-prints me-2"></i>Sneakers from this brand
          </h2>

          <div class="row g-4">
            <% @brand.sneakers.each do |sneaker| %>
              <div class="col-md-6">
                <%= link_to sneaker_path(sneaker), class: "text-decoration-none" do %>
                  <div class="card h-100 shadow-sm hover-shadow">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title text-dark mb-0"><%= sneaker.name %></h5>
                        <div class="badge bg-primary">
                          $<%= number_with_precision(sneaker.price, precision: 2) %>
                        </div>
                      </div>
                      <div class="text-muted mt-2">
                        <small><i class="fas fa-layer-group me-1"></i><%= sneaker.category.name %></small>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>